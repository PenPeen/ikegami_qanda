              <%= current_user.name %>
            </button>
          
            <!--各種メニュー-->
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li>
                <%= link_to 'ユーザー情報の変更', edit_user_registration_path, class: "dropdown-item"  %>
