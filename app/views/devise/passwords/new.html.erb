<div class="container">
  <div class="border border-3 p-3 mt-5">
  <h2>パスワードを忘れてしまいましたか?</h2>
  
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "col-md-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %>
      </div>
    
      <div class="actions mb-3">
        <%= f.submit "パスワード再設定用のメールを送付する", class: 'btn btn-primary' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
    
  </div>
</div>